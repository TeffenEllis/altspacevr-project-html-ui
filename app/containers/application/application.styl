@import "~normalize.css/normalize.css"

*, *before, *:after
 box-sizing border-box

html
  height 100%

body
  background-color black
  color white
  display flex
  flex-flow column nowrap
  line-height 1.3
  min-height 100%
  user-select none

main
  display flex
  flex-flow column nowrap
  flex 1 0 auto

div, section
  display flex
  flex-flow column nowrap

[data-selectable]
  user-select text

[data-component="application"]
  align-self center
  flex-flow row wrap
  max-width 1024px
  padding 1em
