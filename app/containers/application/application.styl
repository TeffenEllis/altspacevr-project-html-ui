@import "~normalize.css/normalize.css"

*, *before, *:after
 box-sizing border-box

html
  height 100%

body
  background-color #0b0b0b
  color #ececec
  display flex
  flex-flow column nowrap
  line-height 1.3
  min-height 100%
  user-select none

main
  display flex
  flex-flow column nowrap
  flex 1 0 auto

div, section
  display flex
  flex-flow column nowrap

[data-selectable]
  user-select text

.fields
  .field-group
    flex-flow row

    & + .field-group
      margin-top 15px

    &[data-group-type="checkbox"]
      margin-left 15%

  .label
    display flex
    flex 1 1 15%
    font-weight bold
    text-align right
    justify-content flex-end
    padding 0.2em 20px 0 0

  .field
    background-color #fff
    border 1px solid #ccc
    border-radius 4px
    color black
    box-shadow inset 0 1px 1px rgba(0,0,0,.075)
    flex 1 1 100%
    padding 6px 12px
    transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

    &::placeholder
      font-style italic

