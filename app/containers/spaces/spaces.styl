[data-component="spaces"]
  align-self center
  flex-flow row wrap
  justify-content space-between
  padding 1em 0
  width 1024px

  .field-group.search
    flex 1 0 100%
    justify-content space-between

    .field
      border-bottom none
      border-bottom-right-radius 0
      border-bottom-left-radius 0
      flex 0 0 33%

    & + [data-component="space"]
      border-top-right-radius 0
      border-top-left-radius 0

